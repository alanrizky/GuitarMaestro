<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activities.shop">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="138dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/group_1"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/buttonBodies"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/roboto_thin"
        android:text="Bodies"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/buttonKnobs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/pinkylight"
        android:fontFamily="@font/roboto_thin"
        android:text="Knobs"
        android:textColor="@color/dark"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/buttonGuitarHead"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/blueksy"
        android:fontFamily="@font/roboto_thin"
        android:text="Guitar head"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/buttonBassNecks"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/roboto_thin"
        android:text="Bass Necks"
        android:textColor="@color/dark"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="315dp" />
</androidx.constraintlayout.widget.ConstraintLayout>